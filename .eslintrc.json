{
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "rules": {
        "no-throw-literal": "warn",
        "no-console": 0,
        "no-cond-assign": 0,
        "no-unused-vars": 1,
        "no-extra-semi": "warn",
        "semi": "warn",
        "prettier/prettier": "error"
    },
    "overrides": [
        {
            "files": [
                "**/*.test.ts",
                "**/*.test.tsx"
            ],
            "env": {
                "mocha": true
            }
        }
    ]
}
